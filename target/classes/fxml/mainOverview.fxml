<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane id="AnchorPane" prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.evgeniy_mh.paddingoracle.FXMLController">
   <children>
      <VBox prefHeight="200.0" prefWidth="100.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
         <children>
            <HBox prefHeight="200.0" prefWidth="200.0">
               <children>
                  <VBox prefHeight="200.0" HBox.hgrow="ALWAYS">
                     <children>
                        <Label text="Атакующий" />
                        <TextArea fx:id="ClientOutputTextArea" editable="false" prefHeight="200.0" prefWidth="200.0" />
                     </children>
                  </VBox>
               </children>
            </HBox>
            <Button fx:id="openFileButton" mnemonicParsing="false" text="Выбрать зашифрованный файл" />
            <Button fx:id="startDecodeButton" mnemonicParsing="false" text="Начать расшифровку" />
            <HBox prefWidth="200.0">
               <children>
                  <Label text="Файл результата" />
                  <Button fx:id="createResultFile" mnemonicParsing="false" text="Создать" />
                  <Button fx:id="openResultFile" mnemonicParsing="false" text="Открыть" />
               </children>
            </HBox>
            <ProgressBar fx:id="decodeProgressBar" prefWidth="200.0" progress="0.0" />
         </children>
      </VBox>
   </children>
</AnchorPane>
